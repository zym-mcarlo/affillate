.dex-theme-dark
  --root-background rgba(35, 43, 72, 1)
  --common-button-background rgba(87, 92, 178, 1)
  --hover-common-button-background rgba(92, 96, 214, 1)
  --dark-background rgba(24, 30, 52, 1)
  --light-background rgba(245, 246, 255, 1)
  --light-box-shadow 0px 24px 30px 0px rgba(32, 34, 71, 0.2)
  --text-color rgba(87, 92, 178, 1)
  --strong-text-color rgba(255, 255, 255, 1)
  --hint-color rgba(121, 132, 161, 1)
  --error-color rgba(218, 9, 9, 1)
  --dark-color rgba(147, 182, 242, 1)

  .common-button
    font-size 24px
    font-weight bold
    border-radius 4px
    color var(--strong-text-color)
    background var(--common-button-background)

    &.disabled
      opacity 0.5
      cursor no-drop

    &:not(.disabled):hover
      background var(--hover-common-button-background)

    &:not(.disabled):active
      background var(--common-button-background)

  .small-button
    &:hover
      filter contrast(3)

  .clear-float
    &:before
      display block
      content ''
      height 1px
