.select-container
  background:rgba(20,26,48,0.5);
  border-radius:4px;
  border:1px solid rgba(43,56,86,0.5);
  position relative
  cursor pointer

  .value
    width 100%
    height 100%
    display flex
    align-items center
    padding 0 0.2rem
    padding-right 0.34rem
    position relative
    color var(--hint-color)

    .iconfont
      position absolute
      right 0.19rem
      top 50%
      transform translateY(-50%)
      font-size 0.12rem
      
  .option-container
    position absolute
    top 100%
    left 0
    min-width 100%
    li
      width 100%
