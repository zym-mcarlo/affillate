.table-container
  background:var(--root-background);
  box-shadow:0px 18px 30px 0px rgba(13,14,28,0.2);
  border-radius:4px; 
  .table-title, .table-body
    padding 0 0.2rem
  .table-title th
    height 0.8rem
    color var(--hint-color)
  .table-body
    padding-bottom 0.2rem
    tr
      height 0.8rem
      color var(--strong-text-color)
      text-align center
      &:hover
        background:rgba(147,182,242,0.06);
        border-radius:4px;