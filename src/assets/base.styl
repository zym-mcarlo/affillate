html
  font-size 100px

body
  font-size 16px

@media screen and (min-width: 1367px)
  html
    font-size 108.34px

@media screen and (min-width: 1920px)
  html
    font-size 116.67px

@media screen and (max-width: 1280px)
  html
    font-size 91.67px

@media screen and (max-width: 1024px)
  html
    font-size 83.34px

@media (-webkit-min-device-pixel-ratio: 2) and (max-width: 1280px)
  html
    font-size 91.67px

@media (-webkit-min-device-pixel-ratio: 2) and (max-width: 1024px)
  html
    font-size 83.34px

html, body
  width 100%
  height 100%
  margin 0

body, button, input, textarea
  font-family Helvetica, PingFang SC, Arial, Source Han Sans SC, Microsoft YaHei, sans-serif

*
  box-sizing border-box

a
  text-decoration none

ul
  list-style none

ul, p, h1, h2, h3, h4, h5, h6, input
  margin 0
  padding 0

button, select
  cursor pointer
  padding 0
  border none
  background none

  &:focus
    outline none
    box-shadow none

input
  border none
  background none
  background-color none

  &:focus
    outline none
    box-shadow none

@import 'theme-dark.styl'